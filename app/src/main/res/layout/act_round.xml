<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <Button
            android:id="@+id/set_radius"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="setRadius"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/set_top_left_radius"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="setTopLeftRadius"
            android:onClick="onClick"/>
        <Button
            android:id="@+id/set_stroke_width"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="setStrokeWidth"
            android:onClick="onClick"/>
        <Button
            android:id="@+id/set_stroke_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="setStrokeColor"
            android:onClick="onClick"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <com.lm.myui.widget.MyRoundLayout
            android:id="@+id/btn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:radius="6dp"
            app:strokeColor="@android:color/holo_red_dark"
            app:strokeWidth="1dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/ic_launcher_background">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="123"
                android:elevation="10dp"/>
        </com.lm.myui.widget.MyRoundLayout>


        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/bg_btn"
            android:layout_gravity="center"/>
    </FrameLayout>

</LinearLayout>