<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--horizontal space-->
    <attr name="horizontalSpace" format="dimension" />
    <!--vertical space-->
    <attr name="verticalSpace" format="dimension" />

    <declare-styleable name="MyUnevenLayout">
        <attr name="horizontalSpace" />
        <attr name="verticalSpace" />
    </declare-styleable>

    <declare-styleable name="MyIndexBar">
        <attr name="verticalSpace" />
        <!--unselected color-->
        <attr name="unSelectedColor" format="color" />
        <!--selected color-->
        <attr name="selectedColor" format="color" />
        <!--text size-->
        <attr name="android:textSize" />
        <!--displayed text array -->
        <attr name="indexs" format="reference" />
        <!--gravity of text array displayed in MyIndexBar-->
        <attr name="android:gravity" />
        <!--indicator color of selected index-->
        <attr name="indicatorColor" format="color" />
    </declare-styleable>

    <declare-styleable name="MyRound">
        <!--top left radius-->
        <attr name="android:topLeftRadius" />
        <!--top right radius-->
        <attr name="android:topRightRadius" />
        <!--bottom left radius-->
        <attr name="android:bottomLeftRadius" />
        <!--bottom right radius-->
        <attr name="android:bottomRightRadius" />
        <!--stroke color-->
        <attr name="strokeColor" format="color" />
        <!--stroke width-->
        <attr name="strokeWidth" format="dimension" />
        <!--all corners radius-->
        <attr name="radius" format="dimension" />
    </declare-styleable>
</resources>